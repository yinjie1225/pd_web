<template>
  <el-dialog
    :title="'审核'"
    :close-on-click-modal="false"
    :visible.sync="visible"
    width="75%" height="700px">
    <el-table
      :data = 'dataForm'
      border
      style="width: 100%;">
      <el-table-column type="selection" header-align="center" align="center"  width="50"></el-table-column>
      <el-table-column  prop="appremark" header-align="center" align="center" label="说明"></el-table-column>
      <el-table-column  prop="applyid" header-align="center" align="center" label="提现单号"></el-table-column>
      <el-table-column  prop="comname" header-align="center" align="center" label="申请公司"></el-table-column>
      <el-table-column  prop="appmount" header-align="center" align="center" label="提现金额（元）"></el-table-column>
      <el-table-column  prop="apptime" header-align="center" align="center" label="提现时间"></el-table-column>
    </el-table>
    <div style="padding: 10px 20px 20px;text-align: center; -webkit-box-sizing: border-box;box-sizing: border-box;">
      <span>
        <el-button type="primary" @click="dataFormSubmit(0)" :disabled="this.flag">通过</el-button>
        <el-button @click="dataFormSubmit(1)" :disabled="this.flag">不通过</el-button>
      </span>
    </div>
  </el-dialog>

</template>

<script type="text/ecmascript-6">
  export default {
    data () {
      return {
        applyid: '',
        flag: '',
        appstate: '',
        totalPage: '',
        visible: false,
        dataForm: []
      }
    },
    methods: {
      init (applyid) {
        this.applyid = applyid
        this.visible = true
        this.$nextTick(() => {
          // this.$refs['dataForm'].resetFields()
          if (this.applyid) {
            this.$http({
              url: this.$http.adornUrl(`/generator/extractdetailinfo/findByApplyId`),
              method: 'post',
              data: {
                'applyid': applyid
              }
            }).then(({data}) => {
              if (data && data.code === 0) {
                this.dataForm = data.listMap
                this.appstate = this.dataForm[0].appstate
                this.changeState()
              } else {
                this.totalPage = 0
              }
            })
          }
        })
      },
      changeState () {
        if (this.appstate === '10') {
          this.flag = false
        } else {
          this.flag = true
        }
        return this.flag
      },
      dataFormSubmit (flag) {
        if (flag === 0) {
          this.$http({
            url: this.$http.adornUrl(`/generator/extractdetailinfo/toExamineAdopt`),
            method: 'post',
            data: {
              'appmount': this.dataForm[0].appmount,
              'comcode': this.dataForm[0].comcode,
              'comname': this.dataForm[0].comname,
              'appstate': '21',
              'applyid': this.dataForm[0].applyid,
              'detailtype': '20'
            }
          }).then(({data}) => {
            if (data && data.code === 0) {
              this.$message({
                message: '操作成功',
                type: 'success',
                duration: 1500,
                onClose: () => {
                  this.visible = false
                  this.$emit('refreshDataList')
                }
              })
            } else {
              this.$message.error(data.msg)
            }
          })
        } else if (flag === 1) {
          this.$http({
            url: this.$http.adornUrl(`/generator/extractdetailinfo/toExamineRefuse`),
            method: 'post',
            data: {
              'applyid': this.dataForm[0].applyid,
              'appstate': '22'
            }
          }).then(({data}) => {
            if (data && data.code === 0) {
              this.$message({
                message: '操作成功',
                type: 'success',
                duration: 1500,
                onClose: () => {
                  this.visible = false
                  this.$emit('refreshDataList')
                }
              })
            } else {
              this.$message.error(data.msg)
            }
          })
        }
      }
    }
  }
</script>
