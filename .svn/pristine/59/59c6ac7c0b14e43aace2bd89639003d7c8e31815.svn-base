<template>
  <div class="mod-config">
    <el-form :inline="true" :model="dataForm" @keyup.enter.native="getDataList()">
      <el-form-item>
        <el-input v-model="dataForm.businessid" placeholder="业务ID" clearable></el-input>
      </el-form-item>
      <el-form-item>
        <el-input v-model="dataForm.businessname" placeholder="业务名称" clearable></el-input>
      </el-form-item>
      <el-form-item>
        <!--<el-input v-model="dataForm.businessstate" placeholder="业务状态" clearable></el-input>-->
        <el-select v-model="dataForm.businessstate" filterable placeholder="业务状态">
          <el-option v-for="item in stateOptions" :key="item.value" :label="item.label" :value="item.value"></el-option>
        </el-select>
      </el-form-item>
      <el-form-item>
        <el-button @click="getDataList()">查询</el-button>
      </el-form-item>
    </el-form>

    <el-table
      :data="dataList"
      border
      v-loading="dataListLoading"
      @selection-change="selectionChangeHandle"
      style="width: 100%;">
      <el-table-column prop="businessname" header-align="center" align="center" label="业务名称"></el-table-column>
      <el-table-column prop="businessid" header-align="center" align="center" label="业务ID"></el-table-column>
      <el-table-column prop="exceldatatype" header-align="center" align="center" label="业务状态" :formatter="bussState" ></el-table-column>
      <el-table-column fixed="right" header-align="center" align="center" width="150" label="操作">
        <template slot-scope="scope">
          <el-button type="text" size="small" @click="addOrUpdateHandle(scope.row.id,scope.row.excelid)">上传</el-button>
        </template>
      </el-table-column>
    </el-table>
    <el-pagination @size-change="sizeChangeHandle" @current-change="currentChangeHandle" :current-page="pageIndex"
                   :page-sizes="[10, 20, 50, 100]"  :page-size="pageSize" :total="totalPage" layout="total, sizes, prev, pager, next, jumper">
    </el-pagination>
    <!-- 弹窗, 新增 / 修改 -->
    <add-or-update v-if="addOrUpdateVisible" ref="addOrUpdate" @refreshDataList="getDataList"></add-or-update>
  </div>
</template>

<script type="text/ecmascript-6">
  import AddOrUpdate from './tbdataentry-add-or-update'
  export default {
    data () {
      return {
        addOrUpdateVisible: false,
        dataListLoading: false,
        dataList: [],
        dataListSelections: [],
        pageIndex: 1,
        pageSize: 10,
        totalPage: 0,
        dataForm: {
          businessname: '',
          businessid: '',
          businessstate: ''
        },
        stateOptions: [{
          value: 0,
          label: '未录入'
        }, {
          value: 1,
          label: '已录入'
        }, {
          value: 2,
          label: '待确认'
        }, {
          value: 3,
          label: '已确认'
        }, {
          value: '',
          label: '全部'
        }]
      }
    },
    components: {
      AddOrUpdate
    },
    activated () {
      this.getDataList()
    },
    methods: {
      // 获取数据列表
      getDataList () {
        this.dataListLoading = true
        this.$http({
          url: this.$http.adornUrl('/generator/advertisementexcel/list'),
          method: 'get',
          params: this.$http.adornParams({
            'page': this.pageIndex,
            'limit': this.pageSize,
            'businessid': this.dataForm.businessid,
            'businessname': this.dataForm.businessname,
            'businessstate': this.dataForm.businessstate
          })
        }).then(({data}) => {
          console.log(data)
          if (data && data.code === 0) {
            this.dataList = data.page
            this.totalPage = data.numCount
          } else {
            this.dataList = []
            this.totalPage = 0
          }
          this.dataListLoading = false
        })
      },
      bussState (row, column, exceldatatype) {
        if (exceldatatype === '0') {
          return '未录入'
        } else if (exceldatatype === '1') {
          return '已录入'
        } else if (exceldatatype === '2') {
          return '待确认'
        } else if (exceldatatype === '3') {
          return '已确认'
        } else {
          return '未录入'
        }
      },
      // 每页数
      sizeChangeHandle (val) {
        this.pageSize = val
        this.pageIndex = 1
        this.getDataList()
      },
      // 当前页
      currentChangeHandle (val) {
        this.pageIndex = val
        this.getDataList()
      },
      // 多选
      selectionChangeHandle (val) {
        this.dataListSelections = val
      },
      // 上传
      addOrUpdateHandle (id, excelid) {
        this.addOrUpdateVisible = true
        this.$nextTick(() => {
          this.$refs.addOrUpdate.init(id, excelid)
        })
      }
    }
  }
</script>
